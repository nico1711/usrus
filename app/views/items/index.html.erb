<div class="margin">
  <%= render 'shared/filterbar' %>
  <div class="d-flex">
    <div class="cards" id="cards-container">
      <%= render 'items_partial', items: @items %>
    </div>
    <div
      id="map"
      style="width: 600px;
     height: 100vh;
     position: sticky;
     top: 0;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
