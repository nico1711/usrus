
<div class="container mt-5">
  <br>
  <h1>My Bookings</h1>
  <% @bookings.each do |booking| %>
    <div class="card-product m-3">
      <img src=<%= cl_image_path booking.item.photo %>>
      <div class="card-product-infos">
        <h4><%= booking.item.name %></h4>
        <h2><%= booking.total_price.round(2) %>â‚¬</h2>
        <p><%= booking.start_date %> >> <%= booking.end_date %></p>
        <%= link_to "Edit Booking", edit_booking_path(booking), class: "btn btn-primary"  %>
        <%= link_to "Delete Booking", booking_path(booking), method: :delete, class: "btn-outline-primary"  %>
      </div>
    </div>
  <% end %>
</div>


