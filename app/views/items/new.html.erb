
<div class="container mt-3">
  <div class="row">
    <div class="col-xs-12 col-lg-6 offset-lg-3">
      <h2>Add some useless shit!</h2>
      <%= simple_form_for @item do |f| %>
        <%= f.input :name %>
        <div class="row">
          <div class="col-6">
            <%= f.input :price %>
          </div>
          <div class="col-6">
            <%= f.input :capacity %>
          </div>
        </div>
        <div class="row">
          <div class="col-8">
            <%= f.input :address %>
          </div>
          <div class="col-2">
            <%= f.input :lat %>
          </div>
          <div class="col-2">
            <%= f.input :lng %>
          </div>
        </div>
        <%= f.input :description%>
        <%= f.button :submit, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>

