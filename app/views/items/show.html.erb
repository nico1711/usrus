<div class="container margin mb-5">
  <div class="row ">
    <div class="col-lg-6 col-md-6 col-xs-12  ">
      <img src='<%= cl_image_path @item.photo, height: 300, width: 400, crop: :fill %>' class="card-img-top" alt="<%= @item.name %>">
    </div>
    <div class="col-lg-6 col-md-6 col-xs-12">
      <h4><%= @item.name %></h4>
      <div class="mt-3 mb-3">
        <h5 id="item-price" data-price="<%= @item.price %>" style="display: inline"><%= @item.price %> â‚¬ </h5>
        <p style="display: inline">/ per night</p>
      </div>
      <p><strong>Description:</strong> <%= @item.description %></p>
      <div>
        <%= render 'booking-form' %>
      </div>
      <div class="text-center mt-3">
        <%= link_to "Would you like to review?", new_item_review_path(@item) %>
      </div>
  </div>
</div>

<br>

<% if @item.reviews.count > 0 %>
  <% @item.reviews.each do |review|%>
  <div class="card">
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p><%= review.description %></p>
        <footer class="blockquote-footer">
          Someone famous in rating: <cite title="Source Title"><%= review.rating %></cite>
        </footer>
      </blockquote>
    </div>
  </div>
  <% end %>
<% else %>
  <div class="card">
    <div class="card-body">
      <p> Don't have any review yet!</p>
    </div>
  </div>
<% end %>
