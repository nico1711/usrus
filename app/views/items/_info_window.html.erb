<div class="card" style="width: 10rem;">
  <img src='<%= cl_image_path item.photo, height: 80, width: 100, crop: :fill %>' class="card-img-top" alt="<%= item.name %>">
  <div class="card-body p-2">
    <h5 class="card-text mx-2">
      <%= link_to item.name, item_path(item), class: "stretched-link" %>
    </h5>
    <h6 class="card-text m-0"><%= item.price %>$ / per Night</h6>
  </div>
</div>
