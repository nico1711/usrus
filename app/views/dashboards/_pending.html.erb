<% @pending_bookings.each do |booking| %>
  <div class="card-product offset-3" style="height: 170px;">
    <img src=<%= cl_image_path booking.item.photo %>>
    <div class="card-product-infos">
      <h4><%= booking.item.name %></h4>
      <h2><%= booking.item.address %></h2>
      <h2 class="mb-3"><%= booking.total_price.round(2) %>â‚¬</h2>
      <h6 class="mb-3">Available date From : <strong><%= booking.start_date %></strong>  to: <strong><%= booking.end_date %></strong></h6>

      <%= link_to edit_booking_path(booking), class: "primarybtn" do %>
          <i class="fas fa-pencil-alt"></i> Edit booking
      <% end %>

      <%= link_to booking_path(booking), method: :delete, data: {confirm: "Are you sure you want to delete this booking?"}, class: "primarybtn ml-2" do %>
          <i class="fas fa-trash-alt"></i> Delete booking
      <% end %>

      <%= link_to accept_path(booking), method: :patch, action: "accept_booking", data: {confirm: "Are you sure you want to accept this booking?"} , class: "primarybtn ml-2" do %>
          <i class="fas fa-user-check"></i> Accept booking
      <% end %>

      <%= link_to reject_path(booking), method: :patch, action: "reject_booking", data: {confirm: "Are you sure you want to reject this booking?"} , class: "primarybtn ml-2" do %>
          <i class="fas fa-user-times"></i> Reject booking
      <% end %>
    </div>
  </div>
<% end %>


