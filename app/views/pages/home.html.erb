<div class="hero">
  <div class="container">
    <form action="/items" method="get">
      <div class="form-group">
        <label for="inputLocation">Where</label>
        <input type="text" name="location" class="form-control" id="inputLocation" placeholder="Anywhere">
      </div>
      <div class="form-group">
        <label for="inputCheckin">Rental Start</label>
        <input type="date" name="checkin" id="inputCheckin" class="form-control" placeholder="Rental start">
      </div>
      <div class="form-group">
        <label for="inputCheckout">Rental End</label>
        <input type="date" name="checkout" id="inputCheckout" class="form-control" placeholder="Rental end">
      </div>
      <div class="form-group">
        <label for="inputGuests">Guests</label>
        <select name="guests" id="inputGuests">
          <option value="1">1</option>
          <option value="2">2</option>
          <option value="3">3</option>
          <option value="4">4</option>
          <option value="5">5</option>
          <option value="6">6</option>
          <option value="7">7</option>
        </select>
      </div>
      <input type="submit" value="Search" class="btn btn-primary">
    </form>
  </div>
</div>
